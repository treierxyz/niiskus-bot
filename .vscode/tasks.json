{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test",
            "type": "shell",
            "command": "node .",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": ["TypeScript compile"]
        },
        {
            "label": "TypeScript compile",
            "type": "shell",
            "command": "npx tsc",
        },
        {
            "label": "Make build dir",
            "type": "shell",
            "command": "mkdir -p build",
        },
        {
            "label": "Install Buildx",
            "type": "shell",
            "command": "docker buildx install"
        },
        {
            "label": "Setup Buildx",
            "type": "shell",
            "command": "docker buildx create --use --driver docker-container"
        },
        {
            "label": "Build Docker image (Unix)",
            "type": "shell",
            "command": "./build-docker.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}